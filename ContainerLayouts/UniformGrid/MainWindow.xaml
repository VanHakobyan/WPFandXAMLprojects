<Window x:Class="UniformGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniformGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <UniformGrid Rows="2" Columns="2">
        <TextBlock Background="Crimson" Padding="10" Margin="10"></TextBlock>
        <TextBlock Background="Yellow" Padding="10" Margin="10"></TextBlock>
        <TextBlock Background="Salmon" Padding="10" Margin="10"></TextBlock>
        <TextBlock Background="Aqua" Padding="10" Margin="10"></TextBlock>
        
    </UniformGrid>
</Window>
